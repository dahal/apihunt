<div class="hero">
  <div class="container">
    <ul id="nav-mobile" class="right side-nav">
      <% if current_user %>
      <center>
        <li><%= image_tag(current_user.github_avatar, class: "responsive-img circle", size: '40') %></li>
        <li><a class="waves-effect waves-light" href="/signout">Logout</a></li>
      </center>
      <% else %>
      <li><%= link_to "Sign in with Github", "/auth/github" %></li>
      <% end %>
    </ul>

    <h2 class="center align text"><span class="hero-white">API Hunt</span></h2>
    <p class="flow-text center align">Hunt, rate and chat about API</p>
  </div>
</div>